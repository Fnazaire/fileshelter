<?xml version="1.0" encoding="UTF-8" ?>
<messages xmlns:if="Wt.WTemplate.conditions">
<!--FORMS message blocks-->

<message id="template-main">
	${navbar-top}
	<div class="container">
		<div class="jumbotron">
			${contents}
		</div>
		<p class="text-right">${tos} | ${github-link}</p>
	</div>
</message>

<message id="template-home">
	<h1><i class="fa fa-external-link"></i> ${tr:msg-app-name}</h1>
	${tr:msg-home-desc}
	${share-create-btn}
</message>

<message id="template-share-create">
	<h1><i class="fa fa-upload"></i> ${tr:msg-share-create}</h1>
	<div class="form-horizontal">
		<div class="form-group">
			<label class="control-label col-sm-2"  for="${id:desc}">
				${tr:msg-description}
			</label>
			<div class="col-sm-5">
				${desc}
			</div>
			<div class="help-block col-sm-5">
				${desc-info}
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2"  for="${id:expiry-date}">
				${tr:msg-expiry-date}
			</label>
			<div class="col-sm-5">
				${expiry-date}
			</div>
			<div class="help-block col-sm-5">
				${expiry-date-info}
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2"  for="${id:hits-validity}">
				${tr:msg-max-hits}
			</label>
			<div class="col-sm-5">
				${hits-validity}
			</div>
			<div class="help-block col-sm-5">
				${hits-validity-info}
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2"  for="${id:password}">
				${tr:msg-password}
			</label>
			<div class="col-sm-5">
				${password}
			</div>
			<div class="help-block col-sm-5">
				${password-info}
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2"  for="${id:password-confirm}">
				${tr:msg-password-confirm}
			</label>
			<div class="col-sm-5">
				${password-confirm}
			</div>
			<div class="help-block col-sm-5">
				${password-confirm-info}
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2"  for="${id:file}">
				${tr:msg-file}
			</label>
			<div class="col-sm-5">
				${file}
			</div>
			<div class="help-block col-sm-5">
				${file-info}
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				${create-btn}
			</div>
		</div>
	</div>
</message>

<message id="template-share-created">
	<h1><i class="fa fa-check"></i> ${tr:msg-share-create-success}</h1>
	<div class="form-horizontal">
		<div class="form-group">
			<label class="control-label col-sm-2"  for="${id:public-link}">
				<i class="fa fa-download"></i> ${tr:msg-download-link}
			</label>
			<div class="col-sm-10 well well-sm">
				${download-link}
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2"  for="${id:edit-link}">
				<i class="fa fa-edit"></i> ${tr:msg-edit-link}
			</label>
			<div class="col-sm-10 well well-sm">
				${edit-link}
			</div>
		</div>
	</div>
</message>

<message id="template-share-download-password">
	<h1><i class="fa fa-download"></i> ${tr:msg-share-download}</h1>
	<div class="alert alert-info">
		${tr:msg-share-protected-by-password}
	</div>
	<div class="form-horizontal">
		<div class="form-group">
			<label class="control-label col-sm-2"  for="${id:password}">
				${tr:msg-password}
			</label>
			<div class="col-sm-5">
				${password}
			</div>
			<div class="help-block col-sm-5">
				${password-info}
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-5">
				${unlock-btn}
			</div>
		</div>
	</div>
</message>

<message id="template-share-download">
	<h1><i class="fa fa-download"></i> ${tr:msg-share-download}</h1>
	${<if-error>}
	<div class="alert alert-danger">
		${error}
	</div>
	${</if-error>}
	<div class="form-horizontal">
		${<if-desc>}
		<div class="form-group">
			<label class="control-label col-sm-2">
				${tr:msg-description}
			</label>
			<div class="col-sm-5 well well-sm">
				${file-desc}
			</div>
		</div>
		${</if-desc>}
		<div class="form-group">
			<label class="control-label col-sm-2">
				${tr:msg-file-name}
			</label>
			<div class="col-sm-5 well well-sm">
				${file-name}
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2">
				${tr:msg-file-size}
			</label>
			<div class="col-sm-5 well well-sm">
				${file-size} kB
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-5">
				${download-btn}
			</div>
		</div>
	</div>
</message>

<message id="template-share-edit">
	<h1><i class="fa fa-edit"></i> ${tr:msg-share-edit}</h1>
	<div class="form-horizontal">
		${<if-desc>}
		<div class="form-group">
			<label class="control-label col-sm-2">
				${tr:msg-description}
			</label>
			<div class="col-sm-5 well well-sm">
				${file-desc}
			</div>
		</div>
		${</if-desc>}
		<div class="form-group">
			<label class="control-label col-sm-2">
				${tr:msg-file-name}
			</label>
			<div class="col-sm-5 well well-sm">
				${file-name}
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2">
				${tr:msg-file-size}
			</label>
			<div class="col-sm-5 well well-sm">
				${file-size} kB
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2">
				${tr:msg-expiry-date}
			</label>
			<div class="col-sm-5 well well-sm">
				${expiry-date}
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2">
				${tr:msg-hits}
			</label>
			<div class="col-sm-5 well well-sm">
				${hits} / ${max-hits}
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-5">
				${delete-btn}
			</div>
		</div>
	</div>
</message>

<message id="template-share-not-created">
	<h1><i class="fa fa-remove"></i> ${tr:msg-share-create-failed}</h1>
	<div class="alert alert-danger">
		${error}
	</div>
</message>

<message id="template-share-not-found">
	<h1><i class="fa fa-exclamation-triangle"></i> ${tr:msg-share-not-found}</h1>
</message>

<message id="template-share-removed">
	<h1><i class="fa fa-remove"></i> ${tr:msg-share-deleted}</h1>
</message>


</messages>
